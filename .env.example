# ======================================
# Zambia Property - Environment Variables
# ======================================
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/zambia_property?schema=public"

# ===========================================
# AUTHENTICATION
# ===========================================
# JWT Secret Key (generate a secure random string)
# Run: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# JWT Access Token Expiry (e.g., 15m, 1h, 1d)
JWT_ACCESS_EXPIRY="15m"

# JWT Refresh Token Expiry
JWT_REFRESH_EXPIRY="7d"

# ===========================================
# CLOUDINARY (Image Storage)
# ===========================================
# Get these from your Cloudinary dashboard: https://cloudinary.com/
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ===========================================
# APPLICATION
# ===========================================
# Next.js public URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# App Name
NEXT_PUBLIC_APP_NAME="Zambia Property"

# ===========================================
# EMAIL (Optional - for notifications)
# ===========================================
# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="Zambia Property <noreply@zambiaproperty.com>"

# ===========================================
# ADMIN (Initial Admin Account)
# ===========================================
ADMIN_EMAIL="admin@zambiaproperty.com"
ADMIN_PASSWORD="change-this-password"

# ===========================================
# ANALYTICS (Optional)
# ===========================================
# Google Analytics
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
